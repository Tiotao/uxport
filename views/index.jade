extends layout

block content
  #particles-js
    .container-fluid.page-header
      .row
        .col-md-12.text-center
          h1.page-title Yiwen Zhang
          .divider
          p.page-subtitle Experience Designer & Developer
          p.chevron-text My Works
          svg.lnr.lnr-chevron-down
            use(xlink:href="#lnr-chevron-down")
    .container-fluid.landing-project-listing
      .container
        .row
          .col-md-6
            .project#board-paperplane(onclick="window.location='projects/paperplane/';")
              img.project-logo(src="/images/logo-paperplane.svg")
              h3.project-title Paper Plane
              p.project-description Creating visual elements to guide player through a fascinating journey
              ul.list-inline.project-tag
